@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="container">
        <h1>Moives</h1>
        <form method="post" id="search-post">
            <input type="text" name="search" value="@Model.search" />
            <label>
                <input type="checkbox" id="search" value="G" name="mpaa" checked="@Model.mpaa.Contains("G")" />
                Rated G
            </label>
            <label>
                <input type="checkbox" class="mpaa" value="PG" name="mpaa" checked="@Model.mpaa.Contains("PG")" />
                Rated PG
            </label>
            <label>
                <input type="checkbox" class="mpaa" value="PG-13" name="mpaa" checked="@Model.mpaa.Contains("PG-13")" />
                Rated PG-13
            </label>
            <label>
                <input type="checkbox" class="mpaa" value="R" name="mpaa" checked="@Model.mpaa.Contains("R")" />
                Rated R
            </label>
            <label>
                <input type="checkbox" class="mpaa" alue="NC-17" name="mpaa" checked="@Model.mpaa.Contains("NC-17")" />
                Rated NC-17
            </label>
            <label>
                Minimum IMDB Rating
                <input type="number" id="minIMDB" min="0" max="10" step="0.1" name="minIMDB" value="@Model.minIMDB" />
            </label>
            <input type="submit" value="Search" />
        </form>
        <div class="results">

            @if (Model.movies.Count == 0)
            {
                <h2>No Results</h2>
            }

            @foreach (Movie movie in Model.movies)
            {
                <div class="movie-entry">
                    <h2>
                        @movie.Title
                        @if (movie.Release_Year != null)
                        {
                            <span> (@movie.Release_Year)</span>
                        }
                    </h2>
                    @if (movie.MPAA_Rating != null)
                    {
                        <div class="MPAA">
                            Rated: @movie.MPAA_Rating
                        </div>
                    }
                    @if (movie.Major_Genre != null)
                    {
                        <div class="genre">
                            Gengre: @movie.Major_Genre;
                        </div>
                    }
                    @if (movie.Director != null)
                    {
                        <div class="Director">
                            Directed by: @movie.Director
                        </div>
                    }
                    <div>
                        @if (movie.IMDB_Rating != null)
                        {
                            <div class="ratings">
                                <span>IMDB</span>
                                @movie.IMDB_Rating
                            </div>
                        }
                        @if (movie.Rotten_Tomatoes_Rating != null)
                        {
                            <div class="ratings">
                                <span>Rotten Tomatoes</span>
                                @movie.Rotten_Tomatoes_Rating
                            </div>
                        }
                    </div>
                </div>
            }
        </div>



    </div>

